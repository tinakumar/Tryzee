<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password_digest %><br />
    <%= text_field_tag :password_digest, @user.password_digest %>
  </div>

  <div>
    <%= label_tag :photo_url %><br />
    <%= text_field_tag :photo_url, @user.photo_url %>
  </div>

  <div>
    <%= label_tag :latitude %><br />
    <%= text_field_tag :latitude, @user.latitude %>
  </div>

  <div>
    <%= label_tag :longitude %><br />
    <%= text_field_tag :longitude, @user.longitude %>
  </div>

  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name, @user.first_name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @user.last_name %>
  </div>

  
  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>

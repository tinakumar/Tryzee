<h1>New Manufacturer</h1>


<%= form_tag(manufacturers_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :rebate %><br />
    <%= check_box_tag :rebate? %>
  </div>

    <div>
    <%= label_tag :rebate_description %><br />
    <%= text_field_tag :rebate_description %>
  </div>

  
  <div>
    <%= submit_tag "Create Manufacturer" %>
  </div>
<% end %>

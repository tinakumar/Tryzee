<h1>Searches</h1>

<p><%= link_to 'Add a New Search', new_search_url %></p>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @searches.each do |search| %>
    <tr>
      <td><%= search.category %></td>
      <td><%= search.manufacturer_id %></td>
      <td><%= search.model_id %></td>
      <td><%= search.user_id %></td>
  
      <td><%= link_to 'Show', search_url(search) %></td>
      <td><%= link_to 'Edit', edit_search_url(search) %></td>
      <td><%= link_to 'Destroy', search_url(search), method: 'delete', data: { confirm: "Do you really want to delete this search?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>


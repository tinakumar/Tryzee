<h1>New Message</h1>


<%= form_tag(messages_url, method: 'post') do %>


  <div>
    <%= label_tag :message %><br />
    <%= text_area_tag :message %>
  </div>

    <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

    <div>
    <%= label_tag :product_id %><br />
    <%= number_field_tag :product_id %>
  </div>

  
  <div>
    <%= submit_tag "Create Message" %>
  </div>
<% end %>
